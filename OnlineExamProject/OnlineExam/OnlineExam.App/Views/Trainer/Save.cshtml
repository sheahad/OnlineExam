
@model OnlineExam.App.Models.TrainerCreateViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Entry</title>

    @if (ViewBag.SMsg != null)
    {
        <h3 style="color: green; font-weight: bold">@ViewBag.SMsg </h3>

    }
    @if (ViewBag.EMsg != null)
    {
        <h3 style="color: red; font-weight: bold">@ViewBag.EMsg </h3>

    }
</head>

<body>
    @using (Html.BeginForm())
    { 
        
        <div class="left-sidebar">
            <div class="row ">
            <div class="col-md-9 ">
                <div>
                    <div class="col-md-12">
                        <h6>Create Trainer</h6>
                    </div>


                    <div class="form-horizontal">


                        <div class="form-group form-row">
                            @Html.LabelFor(c => c.OrganizationId, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(c => c.OrganizationId, Model.OrganizationSelectListItems,"--Select--", new { @class = "form-control", })
                                @Html.ValidationMessageFor(c => c.OrganizationId, null, new { @class = "text-danger" })
                            </div>
                        </div>


                            <div class="form-group form-row">
                                <h7 class="control-label col-md-2">Batch</h7>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(c => c.BatchId, Model.BatchSelectListItems,"--Select--", new { @class = "form-control", })
                                    @Html.ValidationMessageFor(c => c.Id, null, new { @class = "text-danger" })
                                </div>
                            </div>

                        <div class="form-group form-row">
                            <h7 class="control-label col-md-2">Course</h7>
                            <div class="col-md-10">
                                @Html.DropDownListFor(c => c.CourseId, Model.CourseSelectListItems,"--Select--", new { @class = "form-control", })
                                @Html.ValidationMessageFor(c => c.Id, null, new { @class = "text-danger" })
                                
                            </div>
                        </div>
                        <div class="form-group form-row">
                            @Html.LabelFor(c => c.Lead, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.CheckBoxFor(c => c.Lead)
                            </div>
                        </div>


                            <div class="form-group form-row">
                                @Html.LabelFor(c => c.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.Name, null, new { @class = "form-control", placeholder = "Name" })
                                    @Html.ValidationMessageFor(c => c.Name, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group form-row">
                                @Html.LabelFor(c => c.ConatactNo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.ConatactNo, null, new { @class = "form-control", placeholder = "Conatact No" })
                                </div>
                            </div>
                            <div class="form-group form-row">
                                @Html.LabelFor(c => c.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.Email, null, new { @class = "form-control", placeholder = "Email" })
                                </div>
                            </div>
                            <div class="form-group form-row">
                                @Html.LabelFor(c => c.AddressLine1, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.AddressLine1, null, new { @class = "form-control ", placeholder = "AddressLine 1 " })
                                </div>
                            </div>
                            <div class="form-group form-row">
                                @Html.LabelFor(c => c.AddressLine2, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.AddressLine2, htmlAttributes: new { @class = "form-control", placeholder = "AddressLine 2" })
                                </div>
                            </div>

                            <div class="form-group form-row">
                                <h7 class="control-label col-md-2">City</h7>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(c => c.CityId, Model.CityListItemList, "--Select--", new { @class = "form-control", })
                                    @Html.ValidationMessageFor(c => c.CityId, null, new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group form-row">
                                @Html.LabelFor(c => c.PostalCode, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(c => c.PostalCode, htmlAttributes: new { @class = "form-control", placeholder = "Postal Code" })
                                </div>
                            </div>

                            <div class="form-group form-row">
                                <h7 class="control-label col-md-2">Country</h7>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(c => c.CountryId, Model.CountryListItem, "--Select--", new { @class = "form-control", })
                                    @Html.ValidationMessageFor(c => c.CountryId, null, new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group form-row">
                                @Html.LabelFor(c => c.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    <input type="file" class="form-control" name="Image">
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <div class="col-md-6"></div>
                                <div class=" col-md-2 ">
                                    <input type="submit" value="Save" class="btn btn-success float-right" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="col-md-3">
                        <div class="right-side-top">
                            <br/>
                            <h6>View Page</h6>
                        </div>


                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Conatact No</th>
                                    <th>Email</th>

                                </tr>

                            </thead>

                            <tbody>

                                @if (Model != null && Model.TrainerList != null && Model.TrainerList.Count > 0)
                                {
                                    foreach (var trainer in Model.TrainerList)
                                    {
                                        <tr>
                                            <td>@trainer.Name</td>
                                            <td>@trainer.AddressLine1</td>
                                            <td>@trainer.ConatactNo</td>
                                            <td>@trainer.Email</td>
                                        </tr>
                                    }

                                }

                            </tbody>

                        </table>
                    </div>
                    </div>
            </div>






        }


    </body>
    </html>
